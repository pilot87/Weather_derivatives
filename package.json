    "express-validator": "^6.10.0",
    "gatsby-plugin-react-helmet": "^3.10.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.3",
    "node-schedule": "^1.3.3",
    "path": "^0.12.7"
  },
